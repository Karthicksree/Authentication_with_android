<div id="login-page" class="row">
  <div class="col s12 z-depth-4 card-panel">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :role => 'form',class: "login-form"}) do |f| %>
    
      <div class="row">
        <div class="input-field col s12 center">  
          <p class="center login-form-text">welcome</p>
        </div>
      </div>
      <%= devise_error_messages! %>
      <h5>Forgot your password?</h5>
      <p>We'll send password reset instructions.</p>
      
      <div class="row margin">
        <div class="input-field col s12">
          <i class="mdi-social-person-outline prefix"></i>
          <%= f.email_field :email, autofocus: true, label: false %>
          <label for="username" class="center-align">Email</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.submit 'Reset Password', class: "btn col s12" %>
        </div>
      </div>
    
    <% end %>
    <div class="row">
      <div class="input-field col s6 m6 l6">
        <p class="margin medium-small">
          <%= link_to "Log in", new_session_path(resource_name)%>
        </p>
      </div>
      <div class="input-field col s6 m6 l6">     
        <p class="margin right-align medium-small">
          <%= link_to "Register Now!", new_registration_path(resource_name) %></p>  
      </div>          
  </div>
</div>
