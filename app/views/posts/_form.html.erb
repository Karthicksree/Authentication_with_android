<%= simple_form_for(@post,html: {multipart: true,class: "form-horizontal"}) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-lg-10">
      <%= f.text_field :title,class: 'form-control', placeholder: "Title" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-10">
      <%= f.text_area :body,class: 'form-control', placeholder: "Body" %>
    </div>
  </div>

  <%= f.simple_fields_for :mediums, @post.mediums.build do |m| %>

    <div class="form-group">
      <div class="col-lg-10">
        <%= m.file_field :attachment,multipart: true,class: 'form-control', placeholder: "Image" %>
      </div>
    </div>
  <% end %>

  <div class="field">
     <%= f.hidden_field :user_id, :value => current_user.id %>
  </div>
  <div class="actions">
    <%= f.submit "Create a Post",class: "btn btn-primary" %>
  </div>
<% end %>
