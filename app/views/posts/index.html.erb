<p id="notice"><%= notice %></p>
<h2>Add a post</h2>
<%= render "form"%>
<table>
  <!-- <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead> -->

  <tbody>
    <% @posts = Post.all %>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
      </tr>
      <tr>
        <td><%= post.body %></td>
        <td><%#= post.user %></td>
         <!--  <strong>comments:</strong>
          <%= post.comments.size %> -->
        <% if post.user.id == current_user.id %> 
          <td><%= link_to 'Show', post %></td>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
      <tr>
        <td>
          <!-- <h2>Add a comment</h2> -->
          <%= render "comments/form",post: post  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

